pipeline {
    agent any
    
    tools {
        maven "mvn" // Use the Maven tool configured in Jenkins
    }
    
    stages {
        stage('Checkout Code') {
            steps {
                echo 'Cloning repository...'
                // Uncomment the following line to enable Git checkout
                // git branch: 'main', url: 'https://github.com/ibrahimgaha/Project_Java_Devops'
            }
        }

        stage('Setup Environment') {
            steps {
                echo 'Setting up Maven environment...'
                // Uncomment the following line to verify Maven version
                // bat 'mvn -version'
            }
        }
        
        stage('Compile') {
            steps {
                echo 'Compiling the application...'
                // Uncomment the following line to compile without running tests
                // bat 'mvn clean compile -DskipTests'
            }
        }
        
        stage('Package') { // Skip the 'Run Tests' stage
            steps {
                echo 'Packaging the application...'
                // Uncomment the following line to package without running tests
                // bat 'mvn package -DskipTests'
                bat 'echo Current directory: %cd%' // Print the current directory
            }
        }
        
        stage('Archive Artifacts') {
            steps {
                echo 'Archiving build artifacts...'
                // Archive the .jar files from the target directory
                archiveArtifacts artifacts: 'target\\*.jar', fingerprint: true
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline finished. Cleaning up workspace...'
            cleanWs() // Clean up the workspace after the pipeline finishes
        }
        success {
            echo 'Build completed successfully!'
        }
        failure {
            echo 'Build failed. Please check the logs.'
        }
    }
}
